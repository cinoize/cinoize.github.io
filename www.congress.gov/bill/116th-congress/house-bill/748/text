<script>
(function ($) {
    $('ul.tabs_links').find('li.selected').find('a').focus();
	$("<select />").appendTo(".tabs_container .select_container").addClass('tabs_mobile').attr('id', 'tabs_mobile');
	$(".tabs_container .tabs_links li").each(function() {
		var item = $(this);
		var itemLink = $(this).find('a');

		$("<option />", {
			"value"   : itemLink.attr("href"),
			"text"    : itemLink.text()
		}).prop('selected', item.attr('class') == 'selected').appendTo(".tabs_container select");
	});

	$(".tabs_container select").change(function() {
		window.location = $(this).find("option:selected").val();
	});
}(jQuery));
</script>
