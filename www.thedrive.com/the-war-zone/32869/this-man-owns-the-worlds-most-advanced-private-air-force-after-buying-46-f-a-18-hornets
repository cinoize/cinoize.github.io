: buildBids(slotObj, adSlotId)}],slots: [slotObj.slots[divId]]}}function prebidCallback(slots, isFirst) {googletag.cmd.push(function() {var refreshingFooter = false;pbjs.setConfig({priceGranularity: "high"});pbjs.setTargetingForGPTAsync();if ( ENABLE_AMAZON ) { apstag.setDisplayBids(); }feAdConfig.log('PBJS Init Ad Server - Refresh');console.log("Loading " + slots.length + " slots", slots);slots.forEach(function (slot) {if ( adSlotTargets.aid ) {slot.setTargeting("article", adSlotTargets.aid );} else if ( adSlotTargets.ch ) {slot.setTargeting("article", adSlotTargets.ch );}if (isFirst) {slot.setTargeting("refresh", "false");} else {slot.setTargeting("refresh", "true");}if ( slot.getAdUnitPath() === "/21817035599/Desktop_Tablet_Sticky_Footer"|| slot.getAdUnitPath() === '/21817035599/Mobile_Sticky_Footer') {refreshingFooter = slot.getAdUnitPath();}});googletag.pubads().refresh(slots);if (refreshingFooter) {setTimeout(function() { refreshAd(refreshingFooter, feAdSlotsConfig[refreshingFooter].divId); },AD_REFRESH_TIME_SECONDS * 1000);}});}function refreshAd(adSlotId, divId) {console.log("Refreshing a single ad: " + adSlotId + ", " + divId);if ( adSlotId.match("Desktop_Tablet_Sticky_Footer") && document.visibilityState && document.visibilityState !== 'visible' ) {console.log("Delaying sticky footer refresh until visible again");setTimeout(function() { refreshAd(adSlotId, divId); }, 5000);} else {pbjs.que.push(function () {var unitsAndDivs = buildBidConfigForDiv(adSlotId, divId);if (ENABLE_AMAZON) {apstag.fetchBids({slots: [{slotID: divId, sizes: feAdSlotsConfig[adSlotId].sizes, slotName: adSlotId}],timeout: PREBID_TIMEOUT});}pbjs.requestBids({adUnits: unitsAndDivs['adunits'],bidsBackHandler: function () {prebidCallback(unitsAndDivs['slots']);},timeout: PREBID_TIMEOUT});});}}</script></head><link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"><body class="article-page layoutName-article the-war-zone-channel  c