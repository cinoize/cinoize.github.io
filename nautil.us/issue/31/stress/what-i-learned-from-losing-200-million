		$('a.tp_1').on('click touchend', function() {
			var link = $(this).attr('href');
			window.open(link,"_self");
			console.log('ipad link issue.')
			return true;
		});


	var scrolldetect = true;
	$( window ).scroll(function() {
		if(scrolldetect){
			ga('send', 'event','navigate', 'humanscroll', window.location.pathname , {'nonInteraction': 1});
			scrolldetect = false;
		}
	});
});

	ga('create', 'UA-37494472-1', 'auto');
	ga('require', 'displayfeatures');
	ga('send', 'pageview');

</script>

 
<script type="text/javascript" src="/assets/common/js/content.js" ></script></body>
</html>

