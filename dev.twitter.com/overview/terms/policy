            ">

  <div class="ct01__content    ">
    <div class="ct01__item  twtr-grid    ">
      
        <div class="ct01__column
                    twtr-col-md-12
                    
                    ">
          <div class="ct01__wrapper    ">
            
  
  
  
      
      
      
      <div class="ct07-chapters twtr-component--last twtr-component twtr-component--first">











<div class="ct07
            
            twtr-padding__block--top
            twtr-padding__section--bottom" style="--theme-color: var(--purple-dark)">
  <div class="ct07__item  twtr-container">
    <div class="ct07__wrapper  twtr-grid">
      <div class="ct07__sidebar  twtr-col-md-3">
        <div class="ct07__side-nav">
          
          <ul class="ct07__nav-list">
            
            <li class="ct07__nav-item">
              <a href="#2-a" data-target-id="2-a" data-external="false" class="ct07__link  twtr-type--bold-14  twtr-color--purple-dark  has-hover">
                Set yourself up for success
              </a>
            </li>
          </ul>
          <div class="ct07__extra-content">
            
  
  
  
  
          </div>
        </div>
