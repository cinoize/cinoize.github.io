#!/bin/bash
## AT SHIXA AND JUDE; CME DONATE QUICK
export PATH=$PATH:/root/.cargo/bin


function try()
{
    [[ $- = *e* ]]; SAVED_OPT_E=$?
    set +e
}

function throw()
{
    exit $1
}

function catch()
{
    export ex_code=$?
    (( $SAVED_OPT_E )) && set +e
    return $ex_code
}

function throwErrors()
{
    set -e
}

function ignoreErrors()
{
    set +e
}

cd /root/atham/SHEOLYIT/BLOG
mdbook build
