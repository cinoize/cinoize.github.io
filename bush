cat /root/atham/FILE_ERROR >> tmp

TOTAL=`wc -l < $file`

tail -n -$(($TOTAL-$LINENUM-1)) $file >> tmp

#echo $DEROR
##sed -i -e 's/REPLACE_ME_ERROR/{r /root/atham/FILE_ERROR' -e 'd}/g' $file
#echo sed -i -e 's/REPLACE_ME_ERROR/'$DEROR'/g' $file
cp tmp $file
)
catch || {

 echo $ex_code
}
