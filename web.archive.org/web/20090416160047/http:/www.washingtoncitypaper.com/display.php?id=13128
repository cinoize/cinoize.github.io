		if (typeof(window.console) == 'undefined') { window.console = {log:function(){}, time:function(){}, timeEnd:function(){}}; }

		loadCSSfile('/css/style');

		var CPTopNavigation =
		{
			defaultSection: '',
			prevSection: 'news',
			on: '0px 37px',
			off: '0px 0px',

			switchNav: function (sectionToActivate)
			{
				if (!document.getElementById('page-header-nav-top')) { return; }
				if (sectionToActivate == '') { return; }
				var prevSectionDefaultState = (this.prevSection == this.defaultSection) ? this.on : this.off;
				jQuery('#nav-' + sectionToActivate).css('background-position', this.on);
				jQuery('#nav-' + this.prevSection).css('background-position', prevSectionDefaultState);
				window.setTimeout("document.getElementById('nav-detail-" + this.prevSection + "').style.display = 'none'; document.getElementById('nav-detail-" + sectionToActivate + "').style.display = 'block';", 0);
				this.prevSection = sectionToActivate;
			},

			init: function (defaultSection)
			{
				this.defaultSection = defaultSection;
				this.switchNav(defaultSection);
			}
		};

		jQuery(document).ready(function() {

			jQuery('#page-header-nav-tabs a.nav-tab').each(function (i) {
				jQuery(this).mouseover(function () {
					CPTopNavigation.switchNav(jQuery(this).attr('id').replace(/nav-(.*)/, "$1"));
				});
			});
			CPTopNavigation.init('news');

					 });
	</script>

	
	
